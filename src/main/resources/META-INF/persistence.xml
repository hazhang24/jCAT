<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Brodus">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/BrodusDS</jta-data-source>
		<class>negocio.entity.Aluno</class>
		<class>negocio.entity.Aplicacao</class>
		<class>negocio.entity.Aplicador</class>
		<class>negocio.entity.Classificacao</class>
		<class>negocio.entity.Elaborador</class>
		<class>negocio.entity.Escola</class>
		<class>negocio.entity.Inep</class>
		<class>negocio.entity.Instancia</class>
		<class>negocio.entity.Item</class>
		<class>negocio.entity.ItemRespondido</class>
		<class>negocio.entity.Prova</class>
		<class>negocio.entity.Secretaria</class>
		<class>negocio.entity.TipoUsuario</class>
		<class>negocio.entity.Turma</class>
		<class>negocio.entity.Usuario</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>